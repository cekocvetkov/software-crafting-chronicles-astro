---
import { Image } from 'astro:assets'
import aboutMeImage from '../images/me.png'
import angularImage from '../images/angular-original.svg'
import argoCdImage from '../images/argocd-original.svg'
import amazonImage from '../images/amazonwebservices-plain-wordmark.svg'
import azureImage from '../images/azure-original.svg'
import cssImage from '../images/css3-original.svg'
import dockerImage from '../images/docker-original.svg'
import githubImage from '../images/github-original.svg'
import githubactionsImage from '../images/githubactions-original.svg'
import helmImage from '../images/helm-original.svg'
import javaImage from '../images/java-original.svg'
import javascriptImage from '../images/javascript-original.svg'
import kubernetesImage from '../images/kubernetes-original.svg'
import nextjsImage from '../images/nextjs-original.svg'
import noodejsImage from '../images/nodejs-original.svg'
import postgresImage from '../images/postgresql-original.svg'
import typescriptImage from '../images/typescript-original.svg'
import quarkusImage from '../images/quarkus-original.svg'
import rabbitmqImage from '../images/rabbitmq-original.svg'
import springImage from '../images/spring-original.svg'
import reactImage from '../images/react-original.svg'
import Layout from '../layouts/layout.astro'
---
<Layout title="About me">
    <section class="flex flex-col min-h-full text-sm">
        <div class="flex gap-x-5 ">
            <div>
                <Image class="my-1.5 border-solid border border-borderColor max-h-52 max-w-48" alt="About me image" 
                src={aboutMeImage} ></Image>
                <div class="text-borderColor border  about-rectangle"></div>
            </div>
            <div class="flex flex-col">
                <h1 class="text-2xl ">Passionate software developer</h1>
                <br/>
                <div class="text-xs about-me-text">            
                    Always on the lookout for fresh challenges that push my boundaries and expand my skill set.<br/><br/>
                    As a creative who values simplicity, I've designed my blog to be like a business card: 
                    a quick introduction to me and my work. It contains findings and information I encounter during 
                    my hobby projects or work.<br/><br/>
                    If you're curious about my work or want to explore some coding together, feel free to check out 
                    my <a class="font-semibold text-secondaryTextColor" href="https://github.com/cekocvetkov">Github Page</a>. I'd love to learn from others and contribute to projects that make a positive impact.
                </div>
            </div>
        </div>
        <div class="flex pt-10 gap-8 md:gap-6 min-w-full ">
            <div class="flex flex-col gap-y-5">
                <div>Name: Tsvetan Tsvetkov</div>

                <div>Hobbies: &nbsp;🎸 🏀 ⚽ 📚 💻</div>
            </div>
            <div class="flex flex-col gap-y-5">
                <div>Born in: Bulgaria 🇧🇬</div>

                <div> Lives in: Vienna 🇦🇹</div>
            </div>
            <div class="flex flex-col gap-y-5">
                <div>Languages: &nbsp;🇧🇬 &nbsp;🇬🇧&nbsp;&nbsp;🇩🇪
                </div>
                <div>E-Mail: &nbsp;c.y.cvetkov@gmail.com</div>
            </div>

        </div>
        <div class="flex py-5">
            <div class="min-w-44">Favourite Technologies:</div>
            <div class="flex gap-x-1.5 min-w-full">
            <Image src={javaImage} title="Java" alt="Java" width={20} height={18} />
            <Image src={javascriptImage} title="Javascript" alt="Javascript" width={18} height={18} />
            <Image src={typescriptImage} title="Typescript" alt="Typescript" width={18} height={18} />
            <Image src={cssImage} title="CSS" alt="CSS" width={18} height={18} />
            <Image src={noodejsImage} title="NodeJS" alt="Nodejs" width={18} height={18} />
            <Image src={angularImage} title="Angular" alt="Angular" width={18} height={18} />
            <Image src={reactImage} title="React" alt="React" width={18} height={18} />
            <Image src={nextjsImage} title="NextJs" alt="NextJS" width={18} height={18} />
            <Image src={quarkusImage} title="Quarkus" alt="Quarkus" width={18} height={18} />
            <Image src={springImage} title="Spring" alt="Spring" width={18} height={18} />
            <Image src={postgresImage} title="Postgres" alt="Postgres" width={18} height={18} />
            <Image src={rabbitmqImage} title="RabbitMQ" alt="RabbitMQ" width={18} height={18} />
            <Image src={dockerImage} title="Docker" alt="Docker" width={18} height={18} />
            <Image src={kubernetesImage} title="Kubernetes" alt="Kubernetes" width={18} height={18} />
            <Image src={helmImage} title="Helm" alt="Helm" width={18} height={18} class="helm-icon" />
            <Image src={argoCdImage} title="ArgoCD" alt="ArgoCD" width={18} height={18} />
            <Image src={amazonImage} title="AWS" alt="AWS" width={18} height={18} />
            <Image src={azureImage} title="Azure" alt="Azure" width={18} height={18} />
            <Image src={githubImage} title="Github" alt="Github" width={18} height={18} class="helm-icon"/>
            <Image src={githubactionsImage} title="GithubActions" alt="GithubActions" width={18} height={18} class=""/>
            </div>
        </div>
    </section>
</Layout>


<style>
    .about-me-text {
        margin-right: -4rem
    }
    .about-rectangle {
    margin-top: 0.6rem;
    margin-bottom: 0.3rem;
    height: 18px;
    width: 12rem;
    background-color: transparent;
    }
    .helm-icon {
        background-color: #faf9f6;
    }
</style>